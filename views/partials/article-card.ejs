<div class="card border-white text-bg-dark text-decoration-none mb-3">
  <div class="card-header bg-transparent border-white">
    <%= title %>
    <span class="float-end">
      <%= likes %> like<%= likes> 1 ? 's' : '' %>
    </span>
  </div>
  <div class="card-body text-white">
    <p class="card-text fw-light">
      <span class="text-warning">Created <%= new Date(created).toLocaleString() %></span>
      <% if (modified) { %>
        | <span class="text-info">Modified <%= new Date(modified).toLocaleString() %></span>
      <% } %>
      <% if (published) { %>
        | <span class="text-success">Published <%= new Date(published).toLocaleString() %></span>
      <% } %>
    </p>
    <a href="/author/edit/<%= id %>" class="btn btn-info btn-sm">Edit</a>
    <% if (published) { %>
      <a href="/reader/<%= id %>" class="btn btn-primary btn-sm">Read article</a>
    <% } else { %>
      <button class="btn btn-success btn-sm" onclick="publish('<%= id %>')">Publish</button>
    <% } %>
    <button type="button" class="btn btn-danger btn-sm" onclick="del('<%= id %>')">Delete</button>
  </div>
</div>